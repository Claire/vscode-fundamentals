{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "TSLint",
      "type": "shell",
      "command": "./node_modules/.bin/tslint",
      "args": [
        "--project", "${workspaceRoot}"
      ],
      "problemMatcher": {
        "owner": "ts",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "(\\w+)\\:\\s([\\w\/\\-\\.]+)\\[([0-9]+),\\s([0-9]+)]\\:\\s([^\n]+)",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 5
        }
      }
    }
  ]
}